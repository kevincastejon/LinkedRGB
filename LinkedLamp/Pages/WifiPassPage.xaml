<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.WifiPassPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WiFi">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label x:Name="MainLabel"
               Text="Enter the password for this WiFi network"
               FontSize="18" />
        <Label x:Name="SsidLabel"
                Text=""
                FontSize="14" />
        <Entry x:Name="PassEntry"
               Placeholder="Wifi password"
               IsPassword="True"
               TextChanged="OnPassEntryChanged"
               Completed="OnPassEntryCompleted"
               MaxLength="63"/>

        <Button x:Name="NextButton"
                Text="Next"
                IsEnabled="False"
                Clicked="OnNextClicked" />
    </VerticalStackLayout>
</ContentPage>
