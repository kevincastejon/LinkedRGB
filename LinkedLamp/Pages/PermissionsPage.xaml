<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.PermissionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Scan">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label x:Name="MainLabel"
            FontSize="18"
            Text="Start detecting your LinkedLamp device."/>
        <Button
            x:Name="ScanButton"
            Text="Start Detecting"
            FontSize="18"
            Clicked="OnScanButtonClicked"/>        
        <Label x:Name="SecondaryLabel"
            Text="You might be asked for permissions."
            FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>
