<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.SendConfigPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SendConfig">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label x:Name="MainLabel"
               Text="Sending configuration..."
               FontSize="18" />

        <Button x:Name="BackWifiButton"
                Text="Back to WiFi"
                IsVisible="False"
                Clicked="OnBackWifiClicked" />
        <Button x:Name="BackHomeButton"
                Text="Back to Home"
                IsVisible="False"
                Clicked="OnBackHomeClicked" />
    </VerticalStackLayout>
</ContentPage>
